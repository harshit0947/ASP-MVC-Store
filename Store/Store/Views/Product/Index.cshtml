@model List<Store.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h3>List of Products</h3>

<table class="table table-­bordered table-­hover">
    <tr>
        <th>
            Product Id
        </th>
        <th>
        Product Name
        </th>
        <th>
        Price
        </th>
        <th>
            
        </th>
    </tr>
    <tbody>
    @{
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @Html.ActionLink(@item.ProductName,"Description", new {id = item.Id})
                </td>
                <td>
                    @item.Price
                </td>
                <td>
                    @Html.ActionLink("Delete","DeleteProduct", new { id=item.Id }) |
                    @Html.ActionLink("Update", "UpdateProduct", new { id = item.Id })
                </td>
            </tr>
        }
    }
    </tbody>
</table>

